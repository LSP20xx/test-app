<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head') %>
  <title>Upload Identification Documents</title>
</head>
<body>
  <%- include('partials/_header') %>
  <div class="container mt-5">
    <h1>Upload Identification Documents</h1>
    <form action="/auth/upload-id" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="governmentIDPhoto">Government ID Photo:</label>
        <input type="file" class="form-control" id="governmentIDPhoto" name="governmentIDPhoto" required>
      </div>
      <div class="form-group">
        <label for="selfiePhoto">Selfie Photo:</label>
        <input type="file" class="form-control" id="selfiePhoto" name="selfiePhoto" required>
      </div>
      <input type="hidden" name="userId" value="<%= session.userId %>">
      <button type="submit" class="btn btn-primary mt-3">Upload</button>
    </form>
  </div>
  <%- include('partials/_footer') %>
</body>
</html>